@page
@model StudyApplicationFinalie.Pages.Modules.EditModel

@{
    ViewData["Title"] = "Enter Hours";
}

<h1>Enter Hours</h1>

<h4>Enter the date you studied and the hours</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EnterModules.ModuleCode" />
            <div class="form-group">
                <label asp-for="EnterModules.CurrentDate" class="control-label"></label>
                <input asp-for="EnterModules.CurrentDate" class="form-control" />
                <span asp-validation-for="EnterModules.CurrentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnterModules.Enteredhours" class="control-label"></label>
                <input asp-for="EnterModules.Enteredhours" class="form-control" />
                <span asp-validation-for="EnterModules.Enteredhours" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
